{
  "openapi": "3.0.0",
  "info":{
  "title": "API team-project-kapusta-finance-back-end",
  "description": "Description of the server",
  "version": "1.0.0",
  "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/mit"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "development"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization endpoints"
    },
    {
      "name": "Banking",
      "description": "Job for finance endpoints"
    }
  ],

  "paths": {
    "/auth/registration": {
      "post": {
        "tags": ["Auth"],
        "summary": "Регистрация пользователя",
        "parameters": [],
        "requestBody": {
          "description": "Registration's object",
          "required": true,
          "content": {
            "application/json": {
               "schema": {
                 "$ref": "#/components/schemas/RegistrationRequest"
               }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegistrationResponse"
                }
             }
            }
          },
          "400": {
            "description": "Bed request",
            "content": {}
          },
          "409": {
            "description": "Provided email already exists",
            "content": {}
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Вход пользователя (login)",
        "parameters": []
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Выход пользователя (logout)",
        "parameters": [],
        "security": [{"Bearer": []}]
      }
    },
    "/auth/refresh": {
      "get": {
        "tags": ["Auth"],
        "summary": "Получение нового токена при окончании срока действия текущего"
      }
    },
    "/auth/users": {
      "get": {
        "tags": ["Auth"],
        "summary": "Возвращает всех пользователей (для тестирования)",
        "parameters": [],
        "security": [{"Bearer": []}]
      }
    },
    "/auth/google": {
      "get": {
        "tags": ["Auth"],
        "summary": "Редирект запроса на Google для логинизации"
      }
    },

    "/banking/reset-balance": {
      "patch": {
        "tags": ["Banking"],
        "summary": "Устанавливает значение баланса",
        "parameters": [],
        "security": [{"Bearer": []}],
        "requestBody": {
          "description": "balance object",
          "required": true,
          "content": {
            "application/json": {
               "schema": {
                "$ref": "#/components/schemas/ResetBalanceRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResetBalanceResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bed request",
            "content": {}
          }
        }  
      }
    }
  },

  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "length": {
              "min": "3",
              "max": "24"
            },
            "example": "kujg3645HDS"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "User's id",
                "example": "61ffe081b8d104fd7e02d4ec"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              }
            }
          }
        }
      },
      "ResetBalanceRequest": {
        "type": "object",
        "required": ["balance"],
        "properties": {
          "balance": {
            "type": "number",
            "description": "Новая сумма баланса",
            "example": 2340.65
          }
        }
      },
      "ResetBalanceResponse": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "string",
            "description": "User's id",
            "example": "61ffe081b8d104fd7e02d4ec"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "balance": {
            "type": "number",
            "description": "Новая сумма баланса",
            "example": 2340.65
          }
        }
      }
    },

    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}